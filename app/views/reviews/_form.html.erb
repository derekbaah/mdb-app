<%= form_with(model: [@watched_movie, @review], url: create_review_watched_movie_path(@watched_movie), method: :post) do |form| %>
  
  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5, class: "form-control" %>
  </div>
  
  
  <%= form.submit 'Add Review', class: "btn btn-primary" %>
  
<% end %>
