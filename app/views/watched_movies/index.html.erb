<div class="container">
	<h2 class="text-center">Watched Library</h2>
	<div class="row justify-content-center">

    <% @watched_movies.each do |movie| %>
		<div class="card movie_card">
            <%= link_to(image_tag("https://image.tmdb.org/t/p/w500/#{movie["poster_path"]}", class:"card-img-top"), watched_movie_path(movie['id'])) %>
        </div>
    <% end %>
	</div>
</div>


