<div class="container mt-5">
	
  <h2 class="text-center">Search results</h2>
  
  
  <% if @search_results.any? %>
	<div class="row justify-content-center">

    <% @search_results.each do |movie| %>
		<div class="card movie_card">
      <% if movie["poster_path"].nil? %>
        <%= link_to(image_tag("https://motivatevalmorgan.com/wp-content/uploads/2016/06/default-movie.jpg", class:"card-img-top"), movie_path(movie['id'])) %>
      <% else %>
        <%= link_to(image_tag("https://image.tmdb.org/t/p/w500/#{movie["poster_path"]}", class:"card-img-top"), movie_path(movie['id'])) %>
      <% end %>
      <div class="card-body">
		  	<i class="fa-solid fa-play play_button" data-toggle="tooltip" data-placement="bottom" title="Play Trailer"></i>
		    <h5 class="card-title"><%= movie["title"]%></h5>
          <span class="movie_info"><i class="fa-regular fa-calendar-days"></i>&nbsp;<%= movie["release_date"] %></span>
		   		<span class="movie_info float-right"><i class="far fa-star"></i>&nbsp;<%= movie["vote_average"]%></span>
		  </div>
		</div>
  <% end %>

    </div>
    <% else %>
      
      <div class="alert alert-danger" role="alert"><p>No results found :(</p></div>
  <% end %>
</div>