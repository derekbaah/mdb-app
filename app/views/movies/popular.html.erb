<h1>Latest Movies</h1>

<% if @popular.present? %>
  <ul>
    <% @popular.each do |movie| %>
      <li>
        <h2><%= movie["title"] %></h2>
        <p><strong>Overview:</strong> <%= movie["overview"] %></p>
        <p><strong>Release Date:</strong> <%= movie["release_date"] %></p>
      </li>
    <% end %>
  </ul>
  <% else %>
  <p>No movies found.</p>
<% end %>